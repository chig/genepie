# Include license files
include LICENSE
include COPYING
include COPYING.LESSER
include AUTHORS

# Include README and documentation
include README.md
include CHANGELOG.md

# Include package data
recursive-include src/genepie *.py
recursive-include src/genepie *.so
recursive-include src/genepie *.dylib
recursive-include src/genepie/bin *

# Exclude test files from source distribution
exclude src/genepie/test*.py
exclude src/genepie/*_test.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
